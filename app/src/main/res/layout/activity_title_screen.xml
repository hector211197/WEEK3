<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout
        tools:context=".Title_screen"
        android:gravity=""
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
            android:layout_height="50dp"
            android:layout_width="250dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:textSize="12dp"
            android:maxLines="1"
            android:hint=""
            android:id="@+id/Edit1"/>

    <Button
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/btn0"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/btn0"
            android:layout_toRightOf="@id/Edit1"/>

    <Button
            android:layout_height="55dp"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/btn1"
            android:background="@drawable/btn1"
            android:layout_below="@id/Edit1"
            android:onClick="btnTim"/>

    <Button
            android:layout_height="55dp"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/btn2"
            android:background="@drawable/btn2"
            android:layout_toRightOf="@id/btn1"
            android:layout_below="@id/Edit1"
            android:layout_centerHorizontal="true"
            android:onClick="btnXanhLa"/>

    <Button
            android:layout_height="55dp"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/btn3"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn3"
            android:layout_toRightOf="@id/btn2"
            android:layout_below="@id/Edit1"
            android:onClick="btnVang"/>

    <Button
            android:layout_height="55dp"
            android:layout_width="wrap_content"
            android:layout_marginLeft="30dp"
            android:id="@+id/btn4"
            android:background="@drawable/btn4"
            android:layout_below="@id/btn1"
            android:onClick="btnDuong"/>

    <Button
            android:layout_height="55dp"
            android:layout_width="wrap_content"
            android:id="@+id/btn5"
            android:background="@drawable/btn5"
            android:layout_toRightOf="@id/btn4"
            android:layout_below="@id/btn2"
            android:layout_centerHorizontal="true"
            android:onClick="btnKem"/>

    <Button
            android:layout_height="55dp"
            android:layout_width="wrap_content"
            android:id="@+id/btn6"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn6"
            android:layout_toRightOf="@id/btn5"
            android:layout_below="@id/btn2"
            android:layout_centerHorizontal="true"
            android:onClick="btnNau"/>

    <Button
            android:layout_height="60dp"
            android:layout_width="300dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            android:id="@+id/Save"
            android:layout_marginRight="20dp"
            android:layout_below="@id/btn5"
            android:textColor="#222222"
            android:text="SAVE"
            android:onClick="btnSAVE"/>

</RelativeLayout>